<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgyellow"
    tools:context=".fragment.StarFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.androidstudy.seok.constellatiore.view.NestedScrollableHost
        android:layout_width="match_parent"
        android:id="@+id/hostVp"
        android:layout_height="wrap_content">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/starfrag_vp"
            android:layout_width="match_parent"
            android:layout_height="220dp" />


    </com.androidstudy.seok.constellatiore.view.NestedScrollableHost>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/starfrag_tb"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/hostVp"
        android:background="@color/bgyellow"
        android:layout_marginTop="10dp" />
    <GridView
        android:id="@+id/starfrag_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/starfrag_tb"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="100dp"
        android:numColumns="4" />

</RelativeLayout>